<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 p-10 text-white">
      <a href="/">Back to home</a>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex gap-3">
        <% if(users.length >0){ %> <% users.forEach(function(user){ %>
        <div class="user w-72 p-4 bg-zinc-700-rounded-lg overflow-hidden">
          <div class="w-54 h-52 rounded-lg bg-red-500">
            <img
              class="w-full h-full object-cover"
              src="<%= user.image %>"
              alt=""
            />
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-10">
            <a class="text-zinc-200" href="/edit/<%= user._id %>">Edit user</a>
            <a class="text-red-500" href="/delete/<%= user._id %>"
              >Delete User</a
            >
          </div>
          <% }) %> <% } else{ %>
          <h3 class="text-zinc-500">no users yet</h3>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
